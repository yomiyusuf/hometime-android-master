<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="16dp">

    <ImageView
        android:id="@+id/image_item_icon"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:src="@drawable/ic_tram"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />

    <TextView
        android:id="@+id/txt_item_route"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        tools:text="78"
        style="@style/SmallText.badgeText"
        app:layout_constraintVertical_chainStyle="packed"
        app:layout_constraintTop_toTopOf="@id/txt_item_destination"
        app:layout_constraintBottom_toBottomOf="@id/txt_item_destination"
        app:layout_constraintStart_toEndOf="@id/image_item_icon"
        android:layout_marginStart="@dimen/base_dimen_2"
        />

    <TextView
        android:id="@+id/txt_item_destination"
        style="@style/BoldText1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/base_dimen_4"
        android:layout_marginEnd="@dimen/base_dimen_4"
        android:ellipsize="end"
        android:maxLines="1"
        android:layout_marginBottom="@dimen/base_dimen_2"
        app:layout_constraintBottom_toTopOf="@id/txt_item_scheduled"
        app:layout_constraintEnd_toStartOf="@+id/txt_item_countdown"
        app:layout_constraintStart_toEndOf="@id/txt_item_route"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed"
        tools:text="North Richmond" />

    <TextView
        android:id="@+id/txt_item_scheduled"
        style="@style/SmallText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/txt_item_destination"
        app:layout_constraintStart_toStartOf="@id/txt_item_route"
        app:layout_constraintTop_toBottomOf="@id/txt_item_destination"
        tools:text="Scheduled - 1:47 pm" />

    <TextView
        android:id="@+id/txt_item_countdown"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="16"
        style="@style/BoldText"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/txt_item_min"
        app:layout_constraintVertical_chainStyle="packed"
        />

    <TextView
        android:id="@+id/txt_item_min"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/min"
        style="@style/SmallText"
        app:layout_constraintTop_toBottomOf="@id/txt_item_countdown"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"


        />

</androidx.constraintlayout.widget.ConstraintLayout>