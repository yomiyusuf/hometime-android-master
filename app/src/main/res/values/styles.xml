<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="blackText">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="BoldText1" parent="blackText">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="SmallText" parent="blackText">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="BoldText" parent="blackText">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="SmallText.badgeText" parent="SmallText">
        <item name="android:background">@drawable/bg_badge</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:paddingStart">@dimen/base_dimen_1_5</item>
        <item name="android:paddingEnd">@dimen/base_dimen_1_5</item>
    </style>

    <style name="ButtonPrimary">
        <item name="android:background">@drawable/bg_button</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
    </style>

</resources>
